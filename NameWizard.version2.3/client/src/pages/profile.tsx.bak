// File History Section Component
function FileHistorySection() {
  const { toast } = useToast();
  const queryClient = useQueryClient();
  
  // Fetch file history data
  const { data: fileHistory = [], isLoading: isHistoryLoading } = useQuery<FileHistoryItem[]>({
    queryKey: ['/api/file-history'],
    staleTime: 30000,
  });
  
  // Delete file history entry mutation
  const deleteHistoryMutation = useMutation({
    mutationFn: async (id: number) => {
      return await apiRequest({
        url: `/api/file-history/${id}`,
        method: "DELETE"
      });
    },
    onSuccess: () => {
      queryClient.invalidateQueries({ queryKey: ['/api/file-history'] });
      toast({
        title: "History entry deleted",
        description: "The file history entry has been removed",
      });
    },
    onError: (error) => {
      toast({
        title: "Deletion failed",
        description: "Failed to delete history entry",
        variant: "destructive",
      });
    },
  });
  
  const handleDeleteHistoryEntry = (id: number) => {
    deleteHistoryMutation.mutate(id);
  };
  
  return (
    <FileHistoryTable 
      history={fileHistory}
      onDelete={handleDeleteHistoryEntry}
      isLoading={isHistoryLoading}
    />
  );
}

