import React, { useState, useEffect, ReactNode } from "react";
import { useQuery, useMutation } from "@tanstack/react-query";
import { queryClient } from "@/lib/queryClient";
import { DocumentSegmentTemplate, RenamingConversation } from "@shared/schema";
import {
  Tabs,
  TabsContent,
  TabsList,
  TabsTrigger,
} from "@/components/ui/tabs";
import {
  Card,
  CardContent,
  CardDescription,
  CardFooter,
  CardHeader,
  CardTitle,
} from "@/components/ui/card";
import {
  Dialog,
  DialogContent,
  DialogDescription,
  DialogFooter,
  DialogHeader,
  DialogTitle,
  DialogTrigger,
} from "@/components/ui/dialog";
import {
  DropdownMenu,
  DropdownMenuContent,
  DropdownMenuItem,
  DropdownMenuSeparator,
  DropdownMenuTrigger,
} from "@/components/ui/dropdown-menu";
import {
  Accordion,
  AccordionContent,
  AccordionItem,
  AccordionTrigger,
} from "@/components/ui/accordion";
import { Button } from "@/components/ui/button";
import { Input } from "@/components/ui/input";
import { Label } from "@/components/ui/label";
import { Textarea } from "@/components/ui/textarea";
import { Badge } from "@/components/ui/badge";
import { Skeleton } from "@/components/ui/skeleton";
import { ScrollArea } from "@/components/ui/scroll-area";
import { DotsHorizontalIcon } from "@radix-ui/react-icons";
import { PlusCircle, Trash2, Edit, Eye, Copy, Lock, Globe } from "lucide-react";
import { useToast } from "@/hooks/use-toast";

// Helper function to generate a random color
const getRandomPastelColor = () => {
  const hue = Math.floor(Math.random() * 360);
  return `hsl(${hue}, 70%, 80%)`;
};

export default function DocumentSegmentManager() {
  const { toast } = useToast();
  const [selectedTemplate, setSelectedTemplate] = useState<DocumentSegmentTemplate | null>(null);
  const [selectedConversation, setSelectedConversation] = useState<RenamingConversation | null>(null);
  const [isCreateDialogOpen, setIsCreateDialogOpen] = useState(false);
  const [isViewDialogOpen, setIsViewDialogOpen] = useState(false);
  const [activeTab, setActiveTab] = useState("templates");
  const [currentUser, setCurrentUser] = useState<any>(null);

  // Fetch current user
  const { data: user, isLoading: isUserLoading } = useQuery({
    queryKey: ["/api/auth/user"],
  });
  
  // Set the current user when data is available
  useEffect(() => {
    if (user) {
      setCurrentUser(user);
    }
  }, [user]);

  // Fetch document segment templates
  const {
    data: templates,
    isLoading: isTemplatesLoading,
    error: templatesError,
  } = useQuery<DocumentSegmentTemplate[]>({
    queryKey: ["/api/document-segment-templates"],
  });
  
  // Type guard for template features
  const hasFeatures = (obj: any): obj is { features: any[] } => {
    return Array.isArray(obj?.features);
  };

  // Fetch renaming conversations
  const {
    data: conversations,
    isLoading: isConversationsLoading,
    error: conversationsError,
  } = useQuery<RenamingConversation[]>({
    queryKey: ["/api/renaming-conversations"],
  });

  // Prepare the segment types for filtering
  const segmentTypes = templates
    ? Array.from(new Set(templates.map((template) => template.segmentType)))
    : [];

  // Create new conversation mutation
  const createConversationMutation = useMutation({
    mutationFn: async (newConversation: any) => {
      const response = await fetch("/api/renaming-conversations", {
        method: "POST",
        headers: {
          "Content-Type": "application/json",
        },
        body: JSON.stringify(newConversation),
      });
      if (!response.ok) {
        const error = await response.json();
        throw new Error(error.message || "Failed to create conversation");
      }
      return await response.json();
    },
    onSuccess: () => {
      queryClient.invalidateQueries({ queryKey: ["/api/renaming-conversations"] });
      setIsCreateDialogOpen(false);
      toast({
        title: "Success",
        description: "Conversation created successfully",
      });
    },
    onError: (error: Error) => {
      toast({
        title: "Error",
        description: error.message,
        variant: "destructive",
      });
    },
  });

  // Handle conversation creation
  const handleCreateConversation = (e: React.FormEvent<HTMLFormElement>) => {
    e.preventDefault();
    const form = e.currentTarget;
    const formData = new FormData(form);
    const title = formData.get("title") as string;
    const isPublic = (formData.get("isPublic") as string) === "true";
    const templateId = parseInt(formData.get("templateId") as string);

    createConversationMutation.mutate({
      title,
      isPublic,
      segmentTemplateId: templateId,
      conversation: [],
      context: {},
      examples: {},
    });
  };

  // Filter templates by segment type
  const filterTemplatesByType = (type: string) => {
    return templates?.filter((template) => template.segmentType === type) || [];
  };

  // Check if user is a god admin
  const isGodAdmin = currentUser?.role === "god_admin";

  return (
    <div className="container mx-auto py-6">
      <div className="flex justify-between items-center mb-6">
        <h1 className="text-3xl font-bold">Document Segment Manager</h1>
        {isGodAdmin && (
          <Button onClick={() => setIsCreateDialogOpen(true)}>
            <PlusCircle className="mr-2 h-4 w-4" />
            Create Conversation
          </Button>
        )}
      </div>

      <Tabs value={activeTab} onValueChange={setActiveTab} className="w-full">
        <TabsList className="grid w-full grid-cols-2">
          <TabsTrigger value="templates">Templates</TabsTrigger>
          <TabsTrigger value="conversations">Conversations</TabsTrigger>
        </TabsList>

        <TabsContent value="templates" className="mt-6">
          {isTemplatesLoading ? (
            <div className="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
              {[1, 2, 3, 4, 5, 6].map((i) => (
                <Card key={i} className="overflow-hidden">
                  <CardHeader className="pb-2">
                    <Skeleton className="h-5 w-40 mb-2" />
                    <Skeleton className="h-4 w-full" />
                  </CardHeader>
                  <CardContent>
                    <Skeleton className="h-4 w-full mb-2" />
                    <Skeleton className="h-4 w-full mb-2" />
                    <Skeleton className="h-4 w-3/4" />
                  </CardContent>
                </Card>
              ))}
            </div>
          ) : templatesError ? (
            <div className="text-center py-10">
              <p className="text-destructive">Failed to load templates</p>
              <Button
                variant="outline"
                onClick={() => queryClient.invalidateQueries({ queryKey: ["/api/document-segment-templates"] })}
                className="mt-4"
              >
                Try Again
              </Button>
            </div>
          ) : (
            <div>
              {segmentTypes.map((type) => (
                <div key={type} className="mb-8">
                  <h2 className="text-2xl font-semibold mb-4 capitalize">
                    {type.replace(/_/g, " ")}
                  </h2>
                  <div className="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                    {filterTemplatesByType(type).map((template) => (
                      <Card
                        key={template.id}
                        className="overflow-hidden border-t-4"
                        style={{
                          borderTopColor: getRandomPastelColor(),
                        }}
                      >
                        <CardHeader>
                          <div className="flex justify-between items-start">
                            <CardTitle className="text-xl">{template.name}</CardTitle>
                            {isGodAdmin && (
                              <DropdownMenu>
                                <DropdownMenuTrigger asChild>
                                  <Button variant="ghost" size="icon">
                                    <DotsHorizontalIcon className="h-4 w-4" />
                                    <span className="sr-only">Menu</span>
                                  </Button>
                                </DropdownMenuTrigger>
                                <DropdownMenuContent align="end">
                                  <DropdownMenuItem
                                    onClick={() => {
                                      setSelectedTemplate(template);
                                      setIsCreateDialogOpen(true);
                                    }}
                                  >
                                    <PlusCircle className="mr-2 h-4 w-4" />
                                    Create Conversation
                                  </DropdownMenuItem>
                                  <DropdownMenuSeparator />
                                  <DropdownMenuItem>
                                    <Edit className="mr-2 h-4 w-4" />
                                    Edit Template
                                  </DropdownMenuItem>
                                </DropdownMenuContent>
                              </DropdownMenu>
                            )}
                          </div>
                          <CardDescription>{template.description}</CardDescription>
                        </CardHeader>
                        <CardContent>
                          <h4 className="text-sm font-medium mb-2">Features:</h4>
                          <ul className="space-y-1">
                            {hasFeatures(template) && template.features.slice(0, 3).map((feature: any, i: number) => (
                              <li key={i} className="text-sm">
                                â€¢ {feature.name}
                              </li>
                            ))}
                            {hasFeatures(template) && template.features.length > 3 && (
                              <li className="text-sm text-muted-foreground">
                                + {template.features.length - 3} more features
                              </li>
                            )}
                          </ul>
                        </CardContent>
                        <CardFooter>
                          <Button
                            variant="outline"
                            size="sm"
                            className="w-full"
                            onClick={() => {
                              setSelectedTemplate(template);
                              setIsViewDialogOpen(true);
                            }}
                          >
                            <Eye className="mr-2 h-4 w-4" />
                            View Details
                          </Button>
                        </CardFooter>
                      </Card>
                    ))}
                  </div>
                </div>
              ))}
            </div>
          )}
        </TabsContent>

        <TabsContent value="conversations" className="mt-6">
          {isConversationsLoading ? (
            <div className="space-y-4">
              {[1, 2, 3].map((i) => (
                <Card key={i}>
                  <CardHeader className="pb-2">
                    <Skeleton className="h-5 w-40 mb-2" />
                    <Skeleton className="h-4 w-20" />
                  </CardHeader>
                  <CardContent>
                    <Skeleton className="h-4 w-full mb-2" />
                    <Skeleton className="h-4 w-3/4" />
                  </CardContent>
                </Card>
              ))}
            </div>
          ) : conversationsError ? (
            <div className="text-center py-10">
              <p className="text-destructive">Failed to load conversations</p>
              <Button
                variant="outline"
                onClick={() => queryClient.invalidateQueries({ queryKey: ["/api/renaming-conversations"] })}
                className="mt-4"
              >
                Try Again
              </Button>
            </div>
          ) : !conversations?.length ? (
            <div className="text-center py-10">
              <p className="text-muted-foreground">No conversations found</p>
              {isGodAdmin && (
                <Button
                  onClick={() => setIsCreateDialogOpen(true)}
                  className="mt-4"
                >
                  <PlusCircle className="mr-2 h-4 w-4" />
                  Create Conversation
                </Button>
              )}
            </div>
          ) : (
            <div className="space-y-4">
              {conversations.map((conversation) => (
                <Card key={conversation.id}>
                  <CardHeader>
                    <div className="flex justify-between items-start">
                      <div>
                        <CardTitle className="flex items-center">
                          {conversation.title}
                          <Badge
                            variant={conversation.isPublic ? "secondary" : "outline"}
                            className="ml-2"
                          >
                            {conversation.isPublic ? (
                              <Globe className="h-3 w-3 mr-1" />
                            ) : (
                              <Lock className="h-3 w-3 mr-1" />
                            )}
                            {conversation.isPublic ? "Public" : "Private"}
                          </Badge>
                        </CardTitle>
                        {conversation.segmentTemplateId && templates && (
                          <CardDescription>
                            Template:{" "}
                            {
                              templates.find(
                                (t) => t.id === conversation.segmentTemplateId
                              )?.name
                            }
                          </CardDescription>
                        )}
                      </div>
                      {(isGodAdmin || conversation.userId === currentUser?.id) && (
                        <DropdownMenu>
                          <DropdownMenuTrigger asChild>
                            <Button variant="ghost" size="icon">
                              <DotsHorizontalIcon className="h-4 w-4" />
                              <span className="sr-only">Menu</span>
                            </Button>
                          </DropdownMenuTrigger>
                          <DropdownMenuContent align="end">
                            <DropdownMenuItem
                              onClick={() => {
                                setSelectedConversation(conversation);
                                setIsViewDialogOpen(true);
                              }}
                            >
                              <Eye className="mr-2 h-4 w-4" />
                              View Conversation
                            </DropdownMenuItem>
                            <DropdownMenuItem>
                              <Edit className="mr-2 h-4 w-4" />
                              Edit Conversation
                            </DropdownMenuItem>
                            <DropdownMenuItem>
                              <Copy className="mr-2 h-4 w-4" />
                              Duplicate
                            </DropdownMenuItem>
                            <DropdownMenuSeparator />
                            <DropdownMenuItem className="text-destructive">
                              <Trash2 className="mr-2 h-4 w-4" />
                              Delete
                            </DropdownMenuItem>
                          </DropdownMenuContent>
                        </DropdownMenu>
                      )}
                    </div>
                  </CardHeader>
                  <CardContent>
                    <div className="flex justify-between items-center text-sm text-muted-foreground">
                      <span>
                        Created:{" "}
                        {new Date(conversation.createdAt).toLocaleDateString()}
                      </span>
                      <span>
                        Messages:{" "}
                        {Array.isArray(conversation.conversation)
                          ? conversation.conversation.length
                          : 0}
                      </span>
                    </div>
                  </CardContent>
                  <CardFooter>
                    <Button
                      variant="outline"
                      size="sm"
                      className="w-full"
                      onClick={() => {
                        setSelectedConversation(conversation);
                        setIsViewDialogOpen(true);
                      }}
                    >
                      <Eye className="mr-2 h-4 w-4" />
                      View Conversation
                    </Button>
                  </CardFooter>
                </Card>
              ))}
            </div>
          )}
        </TabsContent>
      </Tabs>

      {/* Create Conversation Dialog */}
      <Dialog open={isCreateDialogOpen} onOpenChange={setIsCreateDialogOpen}>
        <DialogContent className="sm:max-w-[500px]">
          <DialogHeader>
            <DialogTitle>Create New Conversation</DialogTitle>
            <DialogDescription>
              Create a new renaming conversation based on a document segment template.
            </DialogDescription>
          </DialogHeader>
          <form onSubmit={handleCreateConversation}>
            <div className="grid gap-4 py-4">
              <div className="grid gap-2">
                <Label htmlFor="title">Conversation Title</Label>
                <Input
                  id="title"
                  name="title"
                  placeholder="Enter a title for this conversation"
                  required
                />
              </div>
              <div className="grid gap-2">
                <Label htmlFor="templateId">Template</Label>
                <select
                  id="templateId"
                  name="templateId"
                  className="flex h-10 w-full rounded-md border border-input bg-background px-3 py-2 text-sm ring-offset-background file:border-0 file:bg-transparent file:text-sm file:font-medium placeholder:text-muted-foreground focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:cursor-not-allowed disabled:opacity-50"
                  defaultValue={selectedTemplate?.id.toString() || ""}
                  required
                >
                  <option value="" disabled>
                    Select a template
                  </option>
                  {templates?.map((template) => (
                    <option key={template.id} value={template.id.toString()}>
                      {template.name}
                    </option>
                  ))}
                </select>
              </div>
              <div className="flex items-center space-x-2">
                <input
                  type="checkbox"
                  id="isPublic"
                  name="isPublic"
                  value="true"
                  className="h-4 w-4 rounded border-gray-300 text-primary focus:ring-primary"
                />
                <Label htmlFor="isPublic" className="text-sm font-normal">
                  Make this conversation public
                </Label>
              </div>
            </div>
            <DialogFooter>
              <Button
                type="button"
                variant="outline"
                onClick={() => setIsCreateDialogOpen(false)}
              >
                Cancel
              </Button>
              <Button type="submit" disabled={createConversationMutation.isPending}>
                {createConversationMutation.isPending ? "Creating..." : "Create"}
              </Button>
            </DialogFooter>
          </form>
        </DialogContent>
      </Dialog>

      {/* View Template/Conversation Dialog */}
      <Dialog open={isViewDialogOpen} onOpenChange={setIsViewDialogOpen}>
        <DialogContent className="sm:max-w-[600px]">
          <DialogHeader>
            <DialogTitle>
              {selectedTemplate
                ? selectedTemplate.name
                : selectedConversation?.title}
            </DialogTitle>
            <DialogDescription>
              {selectedTemplate
                ? selectedTemplate.description
                : "Conversation Details"}
            </DialogDescription>
          </DialogHeader>
          <ScrollArea className="max-h-[60vh]">
            {selectedTemplate && (
              <div className="space-y-4 p-1">
                <div>
                  <h3 className="text-sm font-medium mb-2">Segment Type:</h3>
                  <Badge variant="outline" className="capitalize">
                    {selectedTemplate.segmentType.replace(/_/g, " ")}
                  </Badge>
                </div>
                <div>
                  <h3 className="text-sm font-medium mb-2">Features:</h3>
                  <Accordion type="multiple" className="w-full">
                    {hasFeatures(selectedTemplate) && selectedTemplate.features.map((feature: any, i: number) => (
                      <AccordionItem key={i} value={`feature-${i}`}>
                        <AccordionTrigger className="text-sm">
                          {feature.name}
                        </AccordionTrigger>
                        <AccordionContent>
                          <p className="text-sm text-muted-foreground">
                            {feature.description}
                          </p>
                        </AccordionContent>
                      </AccordionItem>
                    ))}
                  </Accordion>
                </div>
                <div>
                  <h3 className="text-sm font-medium mb-2">Metadata:</h3>
                  <div className="text-sm space-y-1 text-muted-foreground">
                    <p>Created: {new Date(selectedTemplate.createdAt).toLocaleString()}</p>
                    <p>Last Updated: {new Date(selectedTemplate.updatedAt).toLocaleString()}</p>
                  </div>
                </div>
              </div>
            )}

            {selectedConversation && (
              <div className="space-y-4 p-1">
                <div className="flex justify-between">
                  <div>
                    <h3 className="text-sm font-medium mb-2">Visibility:</h3>
                    <Badge
                      variant={selectedConversation.isPublic ? "secondary" : "outline"}
                    >
                      {selectedConversation.isPublic ? (
                        <Globe className="h-3 w-3 mr-1" />
                      ) : (
                        <Lock className="h-3 w-3 mr-1" />
                      )}
                      {selectedConversation.isPublic ? "Public" : "Private"}
                    </Badge>
                  </div>
                  {selectedConversation.segmentTemplateId && templates && (
                    <div>
                      <h3 className="text-sm font-medium mb-2">Template:</h3>
                      <Badge variant="outline">
                        {
                          templates.find(
                            (t) => t.id === selectedConversation.segmentTemplateId
                          )?.name
                        }
                      </Badge>
                    </div>
                  )}
                </div>
                <div>
                  <h3 className="text-sm font-medium mb-2">Conversation:</h3>
                  {Array.isArray(selectedConversation.conversation) &&
                  selectedConversation.conversation.length > 0 ? (
                    <div className="space-y-3 border rounded-md p-3">
                      {selectedConversation.conversation.map((message: any, i: number) => (
                        <div
                          key={i}
                          className={`flex ${
                            message.role === "user" ? "justify-end" : "justify-start"
                          }`}
                        >
                          <div
                            className={`max-w-[80%] rounded-lg px-3 py-2 text-sm ${
                              message.role === "user"
                                ? "bg-primary text-primary-foreground"
                                : "bg-muted"
                            }`}
                          >
                            {typeof message.content === 'string' ? message.content : JSON.stringify(message.content)}
                          </div>
                        </div>
                      ))}
                    </div>
                  ) : (
                    <p className="text-sm text-muted-foreground">No messages in this conversation yet.</p>
                  )}
                </div>
                {selectedConversation && selectedConversation.context && 
                 typeof selectedConversation.context === 'object' && 
                 Object.keys(selectedConversation.context as Record<string, unknown>).length > 0 && (
                  <div>
                    <h3 className="text-sm font-medium mb-2">Context:</h3>
                    <div className="bg-muted rounded-md p-3">
                      <pre className="text-xs overflow-auto">
                        {JSON.stringify(selectedConversation.context, null, 2)}
                      </pre>
                    </div>
                  </div>
                )}
                <div>
                  <h3 className="text-sm font-medium mb-2">Metadata:</h3>
                  <div className="text-sm space-y-1 text-muted-foreground">
                    <p>Created: {new Date(selectedConversation.createdAt).toLocaleString()}</p>
                    <p>Last Updated: {new Date(selectedConversation.updatedAt).toLocaleString()}</p>
                  </div>
                </div>
              </div>
            )}
          </ScrollArea>
          <DialogFooter>
            <Button
              type="button"
              onClick={() => setIsViewDialogOpen(false)}
            >
              Close
            </Button>
          </DialogFooter>
        </DialogContent>
      </Dialog>
    </div>
  );
}